@model IEnumerable<MyPortfolio.ViewModels.EducationViewModel.IndexEducationViewModel>

@{
    ViewData["Title"] = "Educations";
}

<style>
    html, body, h1, h2, h3, h4, h5, h6 {
        font-family: "Roboto", sans-serif
    }
</style>

<body>
    <div class="w3-container w3-card w3-white">
        <h2 class="w3-text-grey w3-padding-16"><i class="fa fa-certificate fa-fw w3-margin-right w3-xxlarge w3-text-teal"></i><b>Education</b></h2>
        <div class="w3-container">
            @foreach (var education in Model)
            {
                <h5 class="w3-opacity"><b>@education.Name</b></h5>
                <h6 class="w3-text-teal"><i class="fa fa-calendar fa-fw w3-margin-right"></i>@education.Start - @education.End</h6>
                <p><b>@education.Description</b></p>
                <a href="@education.Certificate" class="btn btn-outline-info">
                    <p><b>Certificate</b></p>
                </a><hr />
                @if (User.IsInRole("Admin"))
                {
                    <a asp-route-id="@education.Id" asp-controller="Education" asp-action="Edit" class="btn btn-outline-dark"><b>Edit</b></a>
                }
                <hr>
            }
        </div>
    </div>
</body>
