    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Montserrat", sans-serif
        }

        .w3-row-padding img {
            margin-bottom: 12px
        }

        .bgimg {
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            background-image: url(https://scontent.fsof10-1.fna.fbcdn.net/v/t1.6435-9/238712897_4679668162130046_7453349605803421266_n.jpg?_nc_cat=107&ccb=1-5&_nc_sid=09cbfe&_nc_ohc=zzWnpP1gHSoAX_r9V1N&_nc_ht=scontent.fsof10-1.fna&oh=777be88ab510d1d9b6185a7ae124adf8&oe=614AD414);
            min-height: 100%;
        }
    </style>
</head> 

<body>

    <nav class="w3-sidebar w3-hide-medium w3-hide-small" style="width:40%">
        <div class="bgimg"></div>
    </nav>

    <nav class="w3-sidebar w3-black w3-animate-right w3-xxlarge" style="display:none;padding-top:80px;right:0;z-index:2" id="mySidebar">
        <a href="javascript:void(0)" onclick="closeNav()" class="w3-button w3-black w3-xxxlarge w3-display-topright" style="padding:0 12px;">
            <i class="fa fa-remove"></i>
        </a>
        <div class="w3-bar-block w3-center">
            <a asp-controller="Home" asp-action="Index" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Home</a>
            <a asp-controller="Project" asp-action="Index" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Portfolio</a>
            <a asp-controller="Experience" asp-action="Index" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Experience</a>
            <a asp-controller="Course" asp-action="Index" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Courses</a>
            <a asp-controller="Education" asp-action="Index" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Education</a>
            <a asp-controller="Hobie" asp-action="Index" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Hobies</a> 
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Administration" asp-action="AdministrationUsers" class="w3-bar-item w3-button w3-text-grey w3-hover-black" onclick="closeNav()">Administration</a>
            }
        </div>
        <partial name="_LoginPartial" />
    </nav>

    <div class="w3-main w3-padding-large" style="margin-left:40%">

        <span class="w3-button w3-top w3-white w3-xxlarge w3-text-grey w3-hover-text-black" style="width:auto;right:0;" onclick="openNav()"><i class="fa fa-bars"></i></span>

        <header class="w3-container w3-center" style="padding:128px 16px" id="home">
            <h1 class="w3-jumbo"><b>Ivailo Topchiev</b></h1>
            <p><b>Software Engineer</b></p>
            <img src="" class="w3-image w3-hide-large w3-hide-small w3-round" style="display:block;width:60%;margin:auto;">
            <img src="/w3images/profile_girl.jpg" class="w3-image w3-hide-large w3-hide-medium w3-round" width="1000" height="1333">
            <a href="https://cdn.fbsbx.com/v/t59.2708-21/240260571_800567023968061_1317072252943490026_n.pdf/CV.pdf?_nc_cat=104&ccb=1-5&_nc_sid=0cab14&_nc_ohc=E5nhcYHlmTkAX9B17Wc&_nc_ht=cdn.fbsbx.com&oh=0d29c97a3893e84a824a77b8cc4c1097&oe=612D1251&dl=1" download="https://cdn.fbsbx.com/v/t59.2708-21/240260571_800567023968061_1317072252943490026_n.pdf/CV.pdf?_nc_cat=104&ccb=1-5&_nc_sid=0cab14&_nc_ohc=E5nhcYHlmTkAX9B17Wc&_nc_ht=cdn.fbsbx.com&oh=0d29c97a3893e84a824a77b8cc4c1097&oe=612D1251&dl=1" class="w3-button w3-light-grey w3-padding-large w3-margin-top">
                <i class="fa fa-download"></i> Download Resume
            </a>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                <partial name="_MessagePartial" />
                @RenderBody()
            </main>
        </div>
        <!-- Footer -->
        <footer class="w3-container w3-padding-64 w3-light-grey w3-center w3-opacity w3-xlarge">
            <p><b>For Business Proposals</b></p>
            <a asp-controller="Message" asp-action="Create" class="w3-button w3-light-grey w3-padding-large"><i class="fa fa-paper-plane"></i>Message Me</a>
            <br />
            <p><b>Contacts</b></p>
            <p><b><a href="tel:0893690274"><i class="fa fa-fw fa-phone"></i>0893690274</a></b></p>
            <p><b><a href="mailto:ivailotopchiev369@gmail.com"><i class="fa fa-fw fa-envelope"></i>ivailotopchiev369@gmail.com</a></b></p>

            <a href="https://github.com/Ivailo369369"><i class="fa fa-github" aria-hidden="true"></i></a>
            <a href="https://www.instagram.com/ivailo.topchiev/"><i class="fa fa-instagram" aria-hidden="true"></i></a>
            <a href="https://twitter.com/ivailo61472872"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            <a href="https://bg-bg.facebook.com/ivo.topchiev369"><i class="fa fa-facebook-official" aria-hidden="true"></i></a>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>

    <script>
        function openNav() {
            document.getElementById("mySidebar").style.width = "60%";
            document.getElementById("mySidebar").style.display = "block";
        }

        function closeNav() {
            document.getElementById("mySidebar").style.display = "none";
        }
    </script>
</body>
</html>