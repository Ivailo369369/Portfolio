@model MyPortfolio.ViewModels.EditViewModel.EditProjectViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"] <b>Project</b></h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Technologies" class="control-label"></label>
                <input asp-for="Technologies" class="form-control" />
                <span asp-validation-for="Technologies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Responsibilities" class="control-label"></label>
                <input asp-for="Responsibilities" class="form-control" />
                <span asp-validation-for="Responsibilities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceCode" class="control-label"></label>
                <input asp-for="SourceCode" class="form-control" />
                <span asp-validation-for="SourceCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiveOn" class="control-label"></label>
                <input asp-for="LiveOn" class="form-control" />
                <span asp-validation-for="LiveOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
